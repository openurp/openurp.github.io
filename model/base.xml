<?xml version="1.0" encoding="utf-8"?>
<report title="数据库设计说明">
  <system name="基础信息" version="0.0.2"/>
  <db>
    <dialect>org.beangle.data.jdbc.dialect.PostgreSQLDialect
    </dialect>
    <driver>org.postgresql.Driver</driver>
    <url>jdbc:postgresql://localhost:5432/urp_sample</url>
    <schema>base</schema>
    <user>postgres</user>
    <password>postgres</password>
  </db>
  <pages template="jekyll" extension=".md">
    <page name="index" />
    <page name="tables" />
    <page name="images" />
    <page name="module" iterable="true"/>
  </pages>

  <modules>
    <module name="xb" title="校标" tables="xb_*"/>
    <module name="space" title="空间相关" tables="building*,campu*,room*,school*">
      <image name="space" title="校区、教学楼、教室" tables="campuses,buildings,rooms"/>
    </module>
    <module name="time" title="时间相关" tables="calendar*,semester*,*unit*,holiday*,time*">
        <image name="time" title="学期和作息时间" tables="calendars,semesters,time_settings,course_units"/>
    </module>
    <module name="user" title="用户相关" tables="user*,departments">
        <image name="user" title="用户和部门" tables="users,departments"/>
    </module>
    <module name="misc" title="其他" tables="*"/>
  </modules>
</report>
