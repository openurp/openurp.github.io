<?xml version="1.0" encoding="utf-8"?>
<report title="数据库设计说明">
  <system name="基础信息" version="1.0.0"/>
  <db>
    <dialect>org.beangle.data.jdbc.dialect.PostgreSQLDialect
    </dialect>
    <driver>org.postgresql.Driver</driver>
    <url>jdbc:postgresql://{db.server}:5432/urp</url>
    <schema>base</schema>
    <user>{db.username}</user>
    <password>{db.password}</password>
  </db>
  <pages template="jekyll" extension=".md">
    <page name="env" />
    <page name="rules" />
    <page name="index" />
    <page name="tables" />
    <page name="sequences" />
    <page name="images" />
    <page name="module" iterator="true"/>
    <page name="mantain" />
  </pages>

  <modules>
    <module name="gb" title="国标" tables="gb_*"/>
    <module name="xb" title="校标" tables="xb_*"/>
    <module name="jb" title="部标" tables="jb_*"/>
    <module name="misc" title="其他" tables="*">
      <image name="space" title="教学场所" tables="rooms,campuses,buildings"/>
    </module>
  </modules>
</report>
