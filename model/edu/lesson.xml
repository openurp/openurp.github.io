<?xml version="1.0" encoding="utf-8"?>
<report title="数据库设计说明">
  <system name="成绩信息" version="1.0.0"/>
  <db>
    <driver>postgresql</driver>
    <serverName>localhost</serverName>
    <databaseName>urp_sample</databaseName>
    <schema>edu_lesson</schema>
    <user>postgres</user>
    <password>postgres</password>
  </db>
  <pages template="jekyll" extension=".md">
    <page name="index" />
    <page name="tables" />
    <page name="images" />
    <page name="module" iterable="true"/>
  </pages>

  <modules>
    <module name="xb" title="校标" tables="xb_*"/>
    <module name="lesson" title="教学任务" tables="lessons*,course_take*,lesson_limit*">
      <image name="lesson" title="教学任务" tables="lessons*"/>
      <image name="course_take" title="学生修读课程" tables="course_take*,lesson_limit*"/>
    </module>
    <module name="schedule" title="课程安排" tables="course_activities*,lesson_group*">
      <image name="course_activities" title="排课" tables="course_activities*"/>
    </module>
    <module name="exam" title="考务安排" tables="exam_activities*,exam_rooms,exam_monitors,exam_takes">
      <image name="exam_activities" title="考务安排" tables="exam_activities*,exam_rooms,exam_monitors"/>
    </module>
    <module name="misc" title="其他" tables="*"/>
  </modules>
</report>
