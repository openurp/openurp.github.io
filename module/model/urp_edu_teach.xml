<?xml version="1.0" encoding="utf-8"?>
<report title="数据库设计说明">
  <system name="教务信息" version="1.0.0"/>
  <db>
    <dialect>org.beangle.data.jdbc.dialect.PostgreSQLDialect
    </dialect>
    <driver>org.postgresql.Driver</driver>
    <url>jdbc:postgresql://192.168.11.46:5432/urp</url>
    <schema>edu_teach</schema>
    <user>urp</user>
    <password>urp</password>
  </db>
  <pages template="jekyll" extension=".md">
    <page name="env" />
    <page name="rules" />
    <page name="index" />
    <page name="tables" />
    <page name="sequences" />
    <page name="images" />
    <page name="module" iterator="true"/>
    <page name="mantain" />
  </pages>

  <modules>
    <module name="xb" title="校标" tables="xb_*"/>
    <module name="core" title="核心部分" tables="adminclasses*,project*,courses*,course_hour*,majors*,major_journals*,direction*,program*,students*,student_journal*,habilitation*">
      <image name="course" title="课程" tables="courses"/>
    </module>

    <module name="plan" title="培养计划" tables="major_plan*,major_course*,share_plan*,share_course*,std_plan*,std_course*">
      <image name="major" title="专业培养计划" tables="major*"/>
      <image name="share" title="公共课计划" tables="share*"/>
      <image name="std_plan" title="个人计划" tables="std_*"/>
    </module>
    <module name="lesson" title="教学任务" tables="lessons*,course_take*,course_limit*">
      <image name="lesson" title="教学任务" tables="lessons*"/>
      <image name="course_take" title="学生修读课程" tables="course_take*,course_limit*"/>
    </module>
    <module name="schedule" title="课程安排" tables="course_activities*,lesson_group*">
      <image name="course_activities" title="排课" tables="course_activities*"/>
    </module>
    <module name="exam" title="考务安排" tables="exam_activities*,exam_rooms,exam_monitors,exam_takes">
      <image name="exam_activities" title="考务安排" tables="exam_activities*,exam_rooms,exam_monitors"/>
    </module>
    <module name="exam" title="学生成绩" tables="exam_grades,course_grades,ga_grades">
      <image name="grades" title="学生成绩" tables="exam_grades,course_grades,ga_grades"/>
    </module>
    <module name="misc" title="其他" tables="*">
      <image name="teach_workloads" title="教学工作量" tables="teach_moduluses,teach_workloads"/>
    </module>
  </modules>
</report>
